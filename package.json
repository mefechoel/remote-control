  "license": "MIT",
  "scripts": {
    "run-app": "npm run build:frontend && cargo run --release",
    "run-app:dev": "npm run build:frontend:dev && cargo run --release",
    "build": "npm run build:frontend && cargo build --release",
    "build:frontend": "cross-env NODE_ENV=production OPT=true rollup -c",
    "build:frontend:dev": "cross-env NODE_ENV=production OPT=false rollup -c",
    "start": "cross-env NODE_ENV=development rollup -c -w",
    "serve": "sirv dist --single --port 5000 --host 0.0.0.0",
    "serve:ssr": "nodemon src/server.js --watch src/server.js --watch dist/App.js",
    "start:ssr": "npm run build:frontend:dev && run-p start serve:ssr"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
